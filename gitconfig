[alias]
  st = status
  co = checkout
  br = branch
  d = diff
  rb = rebase
  gn = grep -n
  gni = grep -ni
  l = log
  lp = log -p
  ln = log --name-status
  cp = cherry-pick
  ci = commit
  civ = commit --verbose
  pp = pull --prune
  wip = commit -m "wip"
  brage = for-each-ref --sort=committerdate refs/heads/ --format='%(HEAD) %(color:yellow)%(refname:short)%(color:reset) - %(color:red)%(objectname:short)%(color:reset) - %(contents:subject) - %(authorname) (%(color:green)%(committerdate:relative)%(color:reset))'

[push]
	default = nothing

[core]
	excludesfile = ~/.gitignore
  editor = vim
	commitGraph = true

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	required = true

[diff]
  algorithm = patience

[pager]
  diff = diff-so-fancy | less --tabs=4 -RFX
[protocol]
	version = 2
[gc]
	writeCommitGraph = true
[credential]
	helper = store --file /opt/dev/var/private/git_credential_store
[url "https://github.com/Shopify/"]
	insteadOf = git@github.com:Shopify/
	insteadOf = ssh://git@github.com/shopify/
